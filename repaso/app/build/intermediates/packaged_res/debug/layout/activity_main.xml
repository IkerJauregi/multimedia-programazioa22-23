<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/kontadorea"
        android:layout_width="371dp"
        android:layout_height="447dp"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="180sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/garbitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garbitu"
        app:layout_constraintBaseline_toBaselineOf="@+id/mezua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mezua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="27dp"
        android:text="Mezua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/garbitu" />

    <Button
        android:id="@+id/gehitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Gehitu"
        app:layout_constraintBaseline_toBaselineOf="@+id/garbitu"
        app:layout_constraintEnd_toStartOf="@+id/garbitu" />
</androidx.constraintlayout.widget.ConstraintLayout>