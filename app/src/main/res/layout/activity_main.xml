<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="zen1,bidali" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="hasierakoZen,hasierakoa" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="amaierakoZen,amaierakoa" />

    <EditText
        android:id="@+id/zen1"
        android:layout_width="194dp"
        android:layout_height="41dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bidali"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="60dp"
        android:text="@string/bidali"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hasierakoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/hasierakoa"
        app:layout_constraintBottom_toTopOf="@+id/hasierakoZen"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/amaierakoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="@string/amaierakoa"
        app:layout_constraintBottom_toTopOf="@+id/amaierakoZen"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hasierakoZen"
        android:layout_width="121dp"
        android:layout_height="143dp"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="357dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/amaierakoZen"
        android:layout_width="122dp"
        android:layout_height="144dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="356dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>